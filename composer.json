{
    "name": "sideso/hablame",
    "description": "Hablame Notification Channel for Laravel 6, 7, 8 and 9",
    "homepage": "https://github.com/sideso/hablame",
    "license": "MIT",
    "keywords": ["sms", "hablame", "hablameco", "colombia", "laravel"],
    "authors": [
        {
            "name": "Carlos Trujillo",
            "email": "ctrujillo@sideso.com.co",
            "homepage": "https://sideso.com.co",
            "role": "CTO"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.4 || ^7.0",
        "illuminate/notifications": "^6.0 || ^7.0 || ^8.0 || ^9.0",
        "illuminate/support": "^6.0 || ^7.0 || ^8.0 || ^9.0",
        "sideso/sms-message": "^1.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.3",
        "phpunit/phpunit": "^8.0 || ^9.0",
        "orchestra/testbench": "^4.0 || ^5.0 || ^6.0 || ^7.0"
    },
    "autoload": {
        "psr-4": {
            "Sideso\\Hablame\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sideso\\Hablame\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test:coverage": "phpunit --coverage-text --coverage-clover=coverage.clover"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sideso\\Hablame\\HablameServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
